{
  "name": "nanfangxu",
  "type": "module",
  "version": "1.1.0",
  "private": true,
  "description": "免费在线视频搜索与观看平台",
  "author": "bestZwei",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "nodemon server.mjs",
    "dev:cf": "wrangler pages dev .",
    "dev:remote": "wrangler pages dev . --d1=DB=my-tv-db --remote",
    "start": "node server.mjs",
    "init:local-db": "node scripts/init-local-db.js",
    "reset:local-db": "node scripts/reset-local-db.js",
    "deploy": "wrangler pages deploy .",
    "db:local": "wrangler d1 execute my-tv-db --local --command",
    "db:remote": "wrangler d1 execute my-tv-db --remote --command"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "wrangler": "^4.54.0"
  }
}